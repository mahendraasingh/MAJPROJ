
<div class="card shadow-sm">
  <img 
    src="<%= listing.image.url %>" 
    class="card-img-top"
    style="height: 350px; object-fit: cover;">

  <div class="card-body">
    <h2><%= listing.title %></h2>

    <p class="text-muted"><%= listing.location %>, <%= listing.country %></p>

    <h4 class="text-success">â‚¹ <%= listing.price %></h4>

    <p class="mt-3"><%= listing.description %></p>

    <hr>

    <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit Listing</a>

    <form 
      action="/listings/<%= listing._id %>?_method=DELETE" 
      method="POST" 
      class="d-inline">

      <button class="btn btn-danger">Delete</button>
    </form>

    <a href="/listings" class="btn btn-secondary ms-2">Back</a>
  </div>
</div>
