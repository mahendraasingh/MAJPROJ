
<h1>Edit Listing</h1>

<form 
  action="/listings/<%= listing._id %>?_method=PUT" 
  method="POST" 
  class="mt-3">

  <div class="mb-3">
    <label class="form-label">Title</label>
    <input type="text" class="form-control" name="title" value="<%= listing.title %>" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea class="form-control" name="description"><%= listing.description %></textarea>
  </div>

  <div class="mb-3">
    <label class="form-label">Price</label>
    <input type="number" class="form-control" name="price" value="<%= listing.price %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Location</label>
    <input type="text" class="form-control" name="location" value="<%= listing.location %>">
  </div>

  <div class="mb-3">
    <label class="form-label">Country</label>
    <input type="text" class="form-control" name="country" value="<%= listing.country %>">
  </div>

  <button class="btn btn-warning">Update</button>
  <a href="/listings/<%= listing._id %>" class="btn btn-secondary">Cancel</a>

</form>

